<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/blue_background"
    android:orientation="vertical"
    tools:context="com.example.temp.a30seconds.Main2Activity">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/tv_number_of_teams"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/include"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:text="@string/number_of_teams"
        android:textColor="@color/black"
        android:textSize="12pt" />

    <EditText
        android:id="@+id/et_number_of_teams"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_number_of_teams"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:textSize="12pt" />

    <TextView
        android:id="@+id/tv_team_name_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_number_of_teams"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:labelFor="@+id/et_team_name_1"
        android:text="@string/team_1"
        android:textColor="@color/black"
        android:textSize="12pt"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/tv_number_of_players_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/et_number_of_teams"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        android:labelFor="@+id/et_number_of_players_1"
        android:text="@string/team_1_players"
        android:textColor="@color/black"
        android:textSize="12pt" />

    <EditText
        android:id="@+id/et_team_name_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_number_of_players_1"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_number_of_players_1"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_toStartOf="@+id/tv_number_of_players_1"
        android:hint="@string/team_name"
        android:maxLength="15"
        android:textSize="12pt" />


    <EditText
        android:id="@+id/et_number_of_players_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_number_of_players_1"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/et_team_name_1"
        android:hint="@string/number_of_players"
        android:inputType="number"
        android:maxLength="2"
        android:textSize="12pt" />

    <TextView
        android:id="@+id/tv_team_name_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_number_of_players_2"
        android:layout_below="@+id/et_team_name_1"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:labelFor="@+id/et_team_name_2"
        android:text="@string/team_2"
        android:textColor="@color/black"
        android:textSize="12pt"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/tv_number_of_players_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/et_number_of_players_1"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        android:labelFor="@+id/et_number_of_players_2"
        android:text="@string/team_2_players"
        android:textColor="@color/black"
        android:textSize="12pt" />

    <EditText
        android:id="@+id/et_team_name_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_number_of_players_2"
        android:layout_below="@+id/tv_team_name_2"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_toStartOf="@+id/et_number_of_players_1"
        android:maxLength="15"
        android:textSize="12pt" />

    <EditText
        android:id="@+id/et_number_of_players_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_number_of_players_2"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/et_team_name_2"
        android:maxLength="2"
        android:textSize="12pt" />

    <TextView
        android:id="@+id/tv_team_name_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_number_of_players_3"
        android:layout_below="@+id/et_team_name_2"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:labelFor="@+id/et_team_name_3"
        android:text="@string/team_3"
        android:textColor="@color/black"
        android:textSize="12pt"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/tv_number_of_players_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/et_number_of_players_2"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        android:labelFor="@+id/et_number_of_players_3"
        android:text="@string/team_3_players"
        android:textColor="@color/black"
        android:textSize="12pt" />

    <EditText
        android:id="@+id/et_team_name_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_number_of_players_3"
        android:layout_alignEnd="@+id/et_team_name_2"
        android:layout_below="@+id/tv_team_name_3"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:maxLength="15"
        android:textSize="12pt" />

    <EditText
        android:id="@+id/et_number_of_players_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_number_of_players_3"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/et_team_name_3"
        android:maxLength="2"
        android:textSize="12pt" />

    <TextView
        android:id="@+id/tv_team_name_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_number_of_players_4"
        android:layout_below="@+id/et_team_name_3"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:labelFor="@+id/et_team_name_4"
        android:text="@string/team_4"
        android:textColor="@color/black"
        android:textSize="12pt"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/tv_number_of_players_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/et_number_of_players_3"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        android:labelFor="@+id/et_number_of_players_4"
        android:text="@string/team_4_players"
        android:textColor="@color/black"
        android:textSize="12pt" />

    <EditText
        android:id="@+id/et_team_name_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_number_of_players_4"
        android:layout_alignEnd="@+id/et_team_name_3"
        android:layout_below="@+id/tv_team_name_4"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:maxLength="15"
        android:textSize="12pt" />

    <EditText
        android:id="@+id/et_number_of_players_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_number_of_players_4"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/et_team_name_4"
        android:maxLength="2"
        android:textSize="12pt" />

    <TextView
        android:id="@+id/tv_team_name_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_number_of_players_5"
        android:layout_below="@+id/et_team_name_4"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:labelFor="@+id/et_team_name_5"
        android:text="@string/team_5"
        android:textColor="@color/black"
        android:textSize="12pt"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/tv_number_of_players_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/et_number_of_players_4"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        android:labelFor="@+id/et_number_of_players_5"
        android:text="@string/team_5_players"
        android:textColor="@color/black"
        android:textSize="12pt" />

    <EditText
        android:id="@+id/et_team_name_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_number_of_players_5"
        android:layout_alignEnd="@+id/et_team_name_4"
        android:layout_below="@+id/tv_team_name_5"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:maxLength="15"
        android:textSize="12pt" />

    <EditText
        android:id="@+id/et_number_of_players_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_number_of_players_5"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/et_team_name_5"
        android:maxLength="2"
        android:textSize="12pt" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"

        >

        <Button
            android:id="@+id/btn_start"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom"

            android:layout_marginStart="10dp"
            android:background="@drawable/button_drawable"
            android:text="@string/start"
            android:textSize="12pt" />
        <com.google.android.gms.ads.AdView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_toStartOf="@+id/game_size_spinner"
            android:layout_toEndOf="@+id/btn_start" />

        <Spinner
            android:id="@+id/game_size_spinner"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="@drawable/button_drawable"
            android:padding="13dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22pt"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>


</RelativeLayout>
