<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.temp.a30seconds">

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/thirty_seconds"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/small_face_30_seconds"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presentation.GamePlayActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.GameTeamsDetailsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.GameWinnerActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".presentation.SuperActivity"></activity>
    </application>

</manifest>